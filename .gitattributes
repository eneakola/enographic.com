    function setLanguage(lang) {
      const t = translations[lang];
      document.querySelector(".nav-about").textContent = t.about;
      document.querySelector(".nav-portfolio").textContent = t.portfolio;
      document.querySelector(".nav-contact").textContent = t.contact;
      document.querySelector(".hero-subtitle").textContent = t.subtitle;
      document.querySelector(".section-title").textContent = t.about;
      document.querySelector(".about-text").textContent = t.aboutText;
      document.querySelector("#portofol > div > h2")?.remove(); // just in case
      document.querySelector("#portofol > div").children[0].textContent = t.portfolio;
      document.querySelector(".contact-description").textContent = t.contactText;
      document.querySelector("#kontakt > div > h2").textContent = t.contact;
    }

    // Default language
    setLanguage('sq');
